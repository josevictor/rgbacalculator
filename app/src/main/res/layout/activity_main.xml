<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:maxLength="3"
            android:ems="10"
            android:id="@+id/main_edittext_intensity_red"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:hint="255" app:layout_constraintStart_toEndOf="@+id/main_seekBar_intensity_red"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.459" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/main_switch_activate_hex"/>
    <SeekBar
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:id="@+id/main_seekBar_intensity_red" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/main_edittext_intensity_red" app:layout_constraintTop_toTopOf="@+id/main_edittext_intensity_red"
            app:layout_constraintVertical_bias="1.0"/>
    <Switch
            android:text="HEX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_switch_activate_hex" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="136dp"
            android:layout_marginStart="136dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="268dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.179"/>
    <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:maxLength="3"
            android:ems="10"
            android:id="@+id/main_edittext_intensity_green"
            android:hint="255" android:layout_marginEnd="28dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="28dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/main_edittext_intensity_red"/>
    <SeekBar
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:id="@+id/main_seekBar_intensity_green"
            app:layout_constraintEnd_toStartOf="@+id/main_edittext_intensity_green" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/main_edittext_intensity_green"
            app:layout_constraintBottom_toBottomOf="@+id/main_edittext_intensity_green"
            app:layout_constraintHorizontal_bias="0.32" app:layout_constraintVertical_bias="1.0"/>
    <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"

            android:ems="10"
            android:id="@+id/main_edittext_intensity_blue"
            android:hint="255" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/main_edittext_intensity_green"
            android:layout_marginEnd="28dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="28dp"/>
    <SeekBar
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:id="@+id/main_seekBar_intensity_blue"
            app:layout_constraintEnd_toStartOf="@+id/main_edittext_intensity_blue"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/main_edittext_intensity_blue"
            app:layout_constraintBottom_toBottomOf="@+id/main_edittext_intensity_blue"
            app:layout_constraintHorizontal_bias="0.333" app:layout_constraintVertical_bias="1.0"/>
    <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/main_edittext_intensity_alpha"
            android:hint="255" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/main_edittext_intensity_blue"
            android:layout_marginEnd="28dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="28dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.055"/>
    <SeekBar
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:id="@+id/main_seekBar_intensity_alpha"
            app:layout_constraintEnd_toStartOf="@+id/main_edittext_intensity_alpha"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/main_edittext_intensity_alpha"
            app:layout_constraintBottom_toBottomOf="@+id/main_edittext_intensity_alpha"
            app:layout_constraintHorizontal_bias="0.32" app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>